@using WebCommander.Models
@using WebCommander.Helpers
@using WebCommander.Services
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject AgentService AgentService
@implements IDisposable

<div class="card mb-3">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">
            <i class="bi bi-laptop"></i> Agent: @(Agent.Metadata?.ImplantId ?? "Unknown")
        </h4>
        <div>
            @if (ActivePage != "info")
            {
                <button class="btn btn-sm btn-info me-1" @onclick="ShowInfo">
                    <i class="bi bi-info-circle"></i> Infos
                </button>
            }
            @if (ActivePage != "tasks")
            {
                <button class="btn btn-sm btn-success me-1" @onclick="ShowTasks">
                    <i class="bi bi-list-task"></i> Tasks
                </button>
            }
            @if (ActivePage != "loots")
            {
                <button class="btn btn-sm btn-secondary me-1" @onclick="ShowLoots">
                    <i class="bi bi-folder2-open"></i> Loots
                </button>
            }
            @if (ActivePage != "terminal" && (AgentHelper.IsAgentAlive(Agent, AgentService.GetAgents()) ?? false))
            {
                <button class="btn btn-sm btn-primary me-1" @onclick="InteractWithAgent">
                    <i class="bi bi-chat-dots"></i> Interact
                </button>
            }
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <strong>ID:</strong> @Agent.Metadata?.ImplantId (@Agent.Id)
            </div>
            <div class="col-md-3">
                <strong>Hostname:</strong> @Agent.Metadata?.Hostname
            </div>
            <div class="col-md-3">
                <strong>User:</strong> @Agent.Metadata?.UserName
            </div>
            <div class="col-md-3">
                <strong>IP:</strong> @AgentHelper.IpAsString(Agent.Metadata?.Address)
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-3">
                <strong>Process:</strong> @Agent.Metadata?.ProcessName (@Agent.Metadata?.ProcessId)
            </div>
            <div class="col-md-3">
                <strong>Architecture:</strong> @Agent.Metadata?.Architecture
            </div>
            <div class="col-md-3">
                <strong>Integrity:</strong> @Agent.Metadata?.Integrity
            </div>
            <div class="col-md-3">
                <strong>Last Seen:</strong> @AgentHelper.FormatElapsedTime((DateTime.UtcNow - Agent.LastSeen).TotalSeconds)
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public Agent Agent { get; set; } = null!;

    [Parameter]
    public string ActivePage { get; set; } = string.Empty;

    private System.Threading.Timer? _timer;

    protected override void OnInitialized()
    {
        _timer = new System.Threading.Timer(async _ =>
        {
            await InvokeAsync(StateHasChanged);
        }, null, 0, 1000);
    }

    private void ShowInfo()
    {
        NavigationManager.NavigateTo($"/agent-info/{Agent.Id}");
    }

    private void ShowTasks()
    {
        NavigationManager.NavigateTo($"/agent-tasks/{Agent.Id}");
    }

    private void ShowLoots()
    {
        NavigationManager.NavigateTo($"/loots/{Agent.Id}");
    }

    private void InteractWithAgent()
    {
        NavigationManager.NavigateTo($"/terminal/{Agent.Id}");
    }

    private async Task DeleteAgent()
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete agent {Agent.Metadata?.ImplantId ?? "Unknown"}?"))
        {
            await AgentService.StopAgentAsync(Agent.Id);
            NavigationManager.NavigateTo("/agents");
        }
    }

    public void Dispose()
    {
        _timer?.Dispose();
    }
}
