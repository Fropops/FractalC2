@using TeamServer.UI.Models
@using TeamServer.UI.Helpers
@implements IDisposable

<div class="card mb-3">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">
            <i class="bi bi-laptop"></i> Agent: @(Agent.Metadata?.ImplantId ?? "Unknown")
        </h4>
        <div>
            @if (ShowInteractButton && (AgentHelper.IsAgentAlive(Agent, AllAgents) ?? false))
            {
                <button class="btn btn-sm btn-primary me-2" @onclick="OnInteract">
                    <i class="bi bi-chat-dots"></i> Interact
                </button>
            }
            @if (ShowBackButton)
            {
                <button class="btn btn-sm btn-secondary" @onclick="OnBack">
                    <i class="bi bi-arrow-left"></i> @BackButtonText
                </button>
            }
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <strong>ID:</strong> @Agent.Metadata?.ImplantId (@Agent.Id)
            </div>
            <div class="col-md-3">
                <strong>Hostname:</strong> @Agent.Metadata?.Hostname
            </div>
            <div class="col-md-3">
                <strong>User:</strong> @Agent.Metadata?.UserName
            </div>
            <div class="col-md-3">
                <strong>IP:</strong> @AgentHelper.IpAsString(Agent.Metadata?.Address)
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-3">
                <strong>Process:</strong> @Agent.Metadata?.ProcessName (@Agent.Metadata?.ProcessId)
            </div>
            <div class="col-md-3">
                <strong>Architecture:</strong> @Agent.Metadata?.Architecture
            </div>
            <div class="col-md-3">
                <strong>Integrity:</strong> @Agent.Metadata?.Integrity
            </div>
            <div class="col-md-3">
                <strong>Last Seen:</strong> @AgentHelper.FormatElapsedTime((DateTime.UtcNow - Agent.LastSeen).TotalSeconds)
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public Agent Agent { get; set; } = null!;

    [Parameter, EditorRequired]
    public List<Agent> AllAgents { get; set; } = new();

    [Parameter]
    public bool ShowInteractButton { get; set; } = true;

    [Parameter]
    public bool ShowBackButton { get; set; } = true;

    [Parameter]
    public string BackButtonText { get; set; } = "Back";

    [Parameter]
    public EventCallback OnInteract { get; set; }

    [Parameter]
    public EventCallback OnBack { get; set; }

    private System.Threading.Timer? _timer;

    protected override void OnInitialized()
    {
        _timer = new System.Threading.Timer(async _ =>
        {
            await InvokeAsync(StateHasChanged);
        }, null, 0, 1000);
    }

    public void Dispose()
    {
        _timer?.Dispose();
    }
}
