@using WebCommander.Services
@using WebCommander.Components
@inject AgentService AgentService
@inject NavigationManager NavigationManager
@implements IDisposable

<!-- Always show for debugging -->
<div class="connection-error-overlay" style="@(hasError ? "" : "display: none;")">
    <div class="connection-error-content">
        <div class="error-icon">⚠️</div>
        <h3>TeamServer Unavailable</h3>
        <p>Unable to connect to the TeamServer.</p>
        <p class="text-muted">Retrying automatically...</p>
        <div class="spinner-border text-danger mt-3" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
</div>

<style>
    .connection-error-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.8);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 10000;
    }

    .connection-error-content {
        background-color: white;
        padding: 3rem;
        border-radius: 12px;
        text-align: center;
        box-shadow: 0 10px 40px rgba(0,0,0,.3);
        max-width: 500px;
    }

    .error-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
    }

    .connection-error-content h3 {
        color: #dc3545;
        margin-bottom: 1rem;
    }

    .connection-error-content p {
        margin-bottom: 0.5rem;
    }
</style>

@code {
    private bool hasError = false;
    private System.Threading.Timer? _checkTimer;

    protected override void OnInitialized()
    {
        hasError = AgentService.HasConnectionError;
        AgentService.OnConnectionStatusChanged += OnConnectionStatusChanged;
        
        // Check state periodically in case we missed the initial error
        _checkTimer = new System.Threading.Timer(_ =>
        {
            var currentError = AgentService.HasConnectionError;
            if (currentError != hasError)
            {
                hasError = currentError;
                InvokeAsync(StateHasChanged);
            }
        }, null, TimeSpan.FromMilliseconds(100), TimeSpan.FromMilliseconds(500));
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            // Force check state after first render
            var currentError = AgentService.HasConnectionError;
            if (currentError != hasError)
            {
                hasError = currentError;
                InvokeAsync(StateHasChanged);
            }
        }
    }

    private void OnConnectionStatusChanged()
    {
        hasError = AgentService.HasConnectionError;
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        AgentService.OnConnectionStatusChanged -= OnConnectionStatusChanged;
        _checkTimer?.Dispose();
    }
}
