@using WebCommander.Services
@using WebCommander.Components
@inject AgentService AgentService
@inject AuthService AuthService
@inject NavigationManager NavigationManager
@implements IDisposable

@if (isAuthenticated && hasAuthError)
{
    <div class="connection-error-overlay">
        <div class="connection-error-content">
            <div class="error-icon">üîí</div>
            <h3>Authorization Failed</h3>
            <p>Your credentials are invalid or have expired.</p>
            <p class="text-muted">Please re-authenticate to continue.</p>
            <button class="btn btn-primary mt-3" @onclick="ShowLoginModal">
                <i class="bi bi-key"></i> Re-authenticate
            </button>
        </div>
    </div>
}
else if (isAuthenticated && hasConnectionError)
{
    <div class="connection-error-overlay">
        <div class="connection-error-content">
            <div class="error-icon">‚ö†Ô∏è</div>
            <h3>TeamServer Unavailable</h3>
            <p>Unable to connect to the TeamServer.</p>
            <p class="text-muted">Retrying automatically...</p>
            <div class="spinner-border text-danger mt-3" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <button class="btn btn-secondary mt-3" @onclick="ShowLoginModal">
                <i class="bi bi-server"></i> Change Server
            </button>
        </div>
    </div>
}

@if (showLogin)
{
    <LoginModal OnLoginSuccess="OnLoginSuccess" OnCancel="OnLoginCancel" AllowCancel="true" />
}

<style>
    .connection-error-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.8);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 10000;
    }

    .connection-error-content {
        background-color: white;
        padding: 3rem;
        border-radius: 12px;
        text-align: center;
        box-shadow: 0 10px 40px rgba(0,0,0,.3);
        max-width: 500px;
    }

    .error-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
    }

    .connection-error-content h3 {
        color: #dc3545;
        margin-bottom: 1rem;
    }

    .connection-error-content p {
        margin-bottom: 0.5rem;
    }
</style>

@code {
    private bool hasConnectionError = false;
    private bool hasAuthError = false;
    private bool showLogin = false;
    private bool isAuthenticated = false;
    private System.Threading.Timer? _checkTimer;

    protected override async Task OnInitializedAsync()
    {
        isAuthenticated = await AuthService.IsAuthenticatedAsync();
        hasConnectionError = AgentService.HasConnectionError;
        hasAuthError = AgentService.HasAuthorizationError;
        
        AgentService.OnConnectionStatusChanged += OnConnectionStatusChanged;
        AgentService.OnAuthorizationErrorChanged += OnAuthorizationErrorChanged;
        
        // Check state periodically
        _checkTimer = new System.Threading.Timer(_ =>
        {
            var currentConnectionError = AgentService.HasConnectionError;
            var currentAuthError = AgentService.HasAuthorizationError;
            
            if (currentConnectionError != hasConnectionError || currentAuthError != hasAuthError)
            {
                hasConnectionError = currentConnectionError;
                hasAuthError = currentAuthError;
                InvokeAsync(StateHasChanged);
            }
        }, null, TimeSpan.FromMilliseconds(100), TimeSpan.FromMilliseconds(500));
    }

    private void OnConnectionStatusChanged()
    {
        hasConnectionError = AgentService.HasConnectionError;
        InvokeAsync(StateHasChanged);
    }

    private void OnAuthorizationErrorChanged()
    {
        hasAuthError = AgentService.HasAuthorizationError;
        InvokeAsync(StateHasChanged);
    }

    private void ShowLoginModal()
    {
        AgentService.StopPolling();
        showLogin = true;
        StateHasChanged();
    }

    private async Task OnLoginSuccess()
    {
        showLogin = false;
        isAuthenticated = await AuthService.IsAuthenticatedAsync();
        StateHasChanged();
    }

    private void OnLoginCancel()
    {
        showLogin = false;
        StateHasChanged();
    }

    public void Dispose()
    {
        AgentService.OnConnectionStatusChanged -= OnConnectionStatusChanged;
        AgentService.OnAuthorizationErrorChanged -= OnAuthorizationErrorChanged;
        _checkTimer?.Dispose();
    }
}
