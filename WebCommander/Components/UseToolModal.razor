@using WebCommander.Models
@inject NavigationManager NavigationManager

@if (IsVisible)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Use Tool with Agent</h5>
                    <button type="button" class="btn-close" @onclick="Cancel"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Agent</label>
                        <select class="form-select" @bind="selectedAgentId">
                            <option value="">Select an agent...</option>
                            @foreach (var agent in ActiveAgents)
                            {
                                var displayText = $"({agent.Id}) {agent.Metadata?.ImplantId} - {agent.Metadata?.Desc}";
                                <option value="@agent.Id">@displayText</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Tool</label>
                        <input type="text" class="form-control" value="@ToolName" readonly />
                    </div>
                    
                    @if (ToolType == ToolType.DotNet)
                    {
                        <div class="mb-3">
                            <label class="form-label">Execution Method</label>
                            <select class="form-select" @bind="executionMethod">
                                <option value="inline-assembly">inline-assembly (default)</option>
                                <option value="execute-assembly">execute-assembly</option>
                            </select>
                            <small class="form-text text-muted">
                                Choose how the .NET assembly should be executed
                            </small>
                        </div>
                    }
                    
                    @if (ToolType != ToolType.PowerShell)
                    {
                        <div class="mb-3">
                            <label class="form-label">Parameters (optional)</label>
                            <textarea class="form-control" rows="3" @bind="parameters" 
                                      placeholder="Enter parameters..."></textarea>
                            <small class="form-text text-muted">
                                @GetParameterHelpText()
                            </small>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="Submit" disabled="@(!CanSubmit)">
                        Execute
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public string ToolName { get; set; } = string.Empty;

    [Parameter]
    public ToolType ToolType { get; set; }

    [Parameter]
    public List<Agent> ActiveAgents { get; set; } = new();

    [Parameter]
    public EventCallback OnCancel { get; set; }

    private string selectedAgentId = string.Empty;
    private string parameters = string.Empty;
    private string executionMethod = "inline-assembly";

    private bool CanSubmit => !string.IsNullOrEmpty(selectedAgentId);

    private async Task Cancel()
    {
        selectedAgentId = string.Empty;
        parameters = string.Empty;
        executionMethod = "inline-assembly";
        await OnCancel.InvokeAsync();
    }

    private string GetParameterHelpText()
    {
        return ToolType switch
        {
            ToolType.Exe => "Parameters will be passed to the execute-pe command",
            ToolType.DotNet => $"Parameters will be passed to the {executionMethod} command",
            _ => "Parameters will be passed to the command"
        };
    }

    private string GetCommandName()
    {
        return ToolType switch
        {
            ToolType.PowerShell => "powershell-import",
            ToolType.Exe => "execute-pe",
            ToolType.DotNet => executionMethod,
            _ => "inline-assembly"
        };
    }

    private void Submit()
    {
        if (string.IsNullOrEmpty(selectedAgentId))
            return;

        // Build the command based on tool type
        var commandName = GetCommandName();
        var command = $"{commandName} {ToolName}";
        if (!string.IsNullOrWhiteSpace(parameters) && ToolType != ToolType.PowerShell)
        {
            command += $" {parameters}";
        }

        // Navigate to terminal with command in state (no URL length limitation)
        var navigationOptions = new NavigationOptions
        {
            HistoryEntryState = command
        };
        NavigationManager.NavigateTo($"/terminal/{selectedAgentId}", navigationOptions);
    }
}
