@using WebCommander.Models
@using WebCommander.Services
@using System.Text.RegularExpressions
@inject TeamServerClient Api
@inject AgentService AgentService

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Implant Configuration</h5>
    </div>
    <div class="card-body">
        <EditForm Model="@config" OnValidSubmit="HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <!-- Listener Selection -->
            <div class="mb-3">
                <label for="listener" class="form-label">Listener</label>
                <select id="listener" class="form-select" @onchange="OnListenerChanged">
                    @foreach (var listener in listeners)
                    {
                        <option value="@listener.Id">@listener.Name (@listener.Ip:@listener.BindPort)</option>
                    }
                    <option disabled>──────────</option>
                    <option value="custom">Custom Endpoint</option>
                </select>
            </div>

            <!-- Endpoint Section -->
            <div class="card mb-3">
                <div class="card-header">
                    <h6 class="mb-0">Endpoint Configuration</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="protocol" class="form-label">Protocol</label>
                            <select id="protocol" class="form-select" @bind="SelectedProtocol" disabled="@(!isCustomEndpoint)">
                                <option value="http">HTTP</option>
                                <option value="https">HTTPS</option>
                                <option value="pipe">Pipe</option>
                                <option value="tcp">TCP</option>
                            </select>
                        </div>
                        
                        @if (ShowAddress)
                        {
                            <div class="col-md-4 mb-3">
                                <label for="address" class="form-label">Address</label>
                                <input type="text" id="address" class="form-control" @bind="endpointAddress" disabled="@(!isCustomEndpoint)" />
                            </div>
                        }

                        @if (ShowPort)
                        {
                            <div class="col-md-4 mb-3">
                                <label for="port" class="form-label">Port</label>
                                <input type="text" id="port" class="form-control" @bind="endpointPort" disabled="@(!isCustomEndpoint)" />
                            </div>
                        }
                        
                        @if (ShowPipeName)
                        {
                             <div class="col-md-8 mb-3">
                                <label for="pipeName" class="form-label">Pipe Name</label>
                                <input type="text" id="pipeName" class="form-control" @bind="endpointPipeName" disabled="@(!isCustomEndpoint)" />
                                <div class="form-text">Alphanumeric, cannot start with a digit.</div>
                            </div>
                        }
                    </div>

                    @if (ShowAddress)
                    {
                        <div class="alert alert-secondary d-flex align-items-center">
                            <i class="bi bi-arrow-up-right-circle fs-4 me-3"></i>
                            <div>
                                <strong>Callback Connection</strong><br/>
                                The implant will initiate a connection TO the TeamServer (or a redirector) at this URL.
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning d-flex align-items-center">
                            <i class="bi bi-arrow-down-left-circle fs-4 me-3"></i>
                            <div>
                                <strong>P2P Listener</strong><br/>
                                The implant will BIND this local endpoint and wait for another agent to connect to it.
                            </div>
                        </div>
                    }

                    <div class="alert alert-info">
                        <strong>Endpoint URL:</strong> @GetEndpointUrl()
                    </div>
                </div>
            </div>

            <!-- Implant Configuration -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="implantType" class="form-label">Implant Type</label>
                    <select id="implantType" class="form-select" @bind="config.Type">
                        @foreach (var type in Enum.GetValues<ImplantType>())
                        {
                            var prefix = type == ImplantType.Elf ? "Linux - " : "Windows - ";
                            <option value="@type">@prefix@type</option>
                        }
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="architecture" class="form-label">Architecture</label>
                    <select id="architecture" class="form-select" @bind="config.Architecture">
                        @foreach (var arch in Enum.GetValues<ImplantArchitecture>())
                        {
                            <option value="@arch">@arch</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-check">
                        <input type="checkbox" id="debug" class="form-check-input" @bind="config.IsDebug" />
                        <label for="debug" class="form-check-label">Enable Debug Mode</label>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-check">
                        <input type="checkbox" id="verbose" class="form-check-input" @bind="config.IsVerbose" />
                        <label for="verbose" class="form-check-label">Verbose Generation Output</label>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">
                    @errorMessage
                </div>
            }

            <div class="d-flex justify-content-end gap-2">
                <button type="button" class="btn btn-secondary" @onclick="OnCancel">Cancel</button>
                <button type="submit" class="btn btn-primary">Create Implant</button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [Parameter]
    public EventCallback<(bool success, string message, string details)> OnCreationResult { get; set; }

    [Parameter]
    public EventCallback OnCancelled { get; set; }

    private ImplantConfig config = new ImplantConfig
    {
        Type = ImplantType.PowerShell,
        Architecture = ImplantArchitecture.x64,
        IsDebug = false,
        IsVerbose = false
    };

    private List<Listener> listeners = new();
    private string selectedListenerId = "custom";
    private bool isCustomEndpoint = true;
    
    // Protocol selection state
    private string _selectedProtocol = "http";
    private string SelectedProtocol 
    {
        get => _selectedProtocol;
        set 
        {
            if (_selectedProtocol != value)
            {
                _selectedProtocol = value;
                StateHasChanged();
            }
        }
    }

    private string endpointAddress = "127.0.0.1";
    private string endpointPort = "80";
    private string endpointPipeName = "demoPipe";
    private string errorMessage = string.Empty;

    // Visibility helpers
    private bool ShowAddress => SelectedProtocol == "http" || SelectedProtocol == "https";
    private bool ShowPort => SelectedProtocol == "http" || SelectedProtocol == "https" || SelectedProtocol == "tcp";
    private bool ShowPipeName => SelectedProtocol == "pipe";

    protected override void OnInitialized()
    {
        listeners = AgentService.GetListeners();
        if (listeners.Any())
        {
            selectedListenerId = listeners.First().Id;
            isCustomEndpoint = false;
            UpdateEndpointFromListener();
        }
    }

    private void OnListenerChanged(ChangeEventArgs e)
    {
        selectedListenerId = e.Value?.ToString() ?? "custom";
        isCustomEndpoint = selectedListenerId == "custom";
        
        if (!isCustomEndpoint)
        {
            UpdateEndpointFromListener();
        }
        else
        {
             // Reset to defaults for custom
             SelectedProtocol = "http";
             endpointAddress = "127.0.0.1";
             endpointPort = "80";
        }
    }

    private void UpdateEndpointFromListener()
    {
        var listener = listeners.FirstOrDefault(l => l.Id == selectedListenerId);
        if (listener != null)
        {
            // Inject listener values into input fields
            SelectedProtocol = listener.Secured ? "https" : "http";
            endpointAddress = listener.Ip;
            endpointPort = listener.BindPort.ToString();
        }
    }

    private string GetEndpointUrl()
    {
        try
        {
            switch (SelectedProtocol)
            {
                case "http":
                    return $"http://{endpointAddress}:{endpointPort}";
                case "https":
                    return $"https://{endpointAddress}:{endpointPort}";
                case "pipe":
                    return $"pipe://*:{endpointPipeName}";
                case "tcp":
                    return $"tcp://*:{endpointPort}";
                default:
                    return "Invalid protocol";
            }
        }
        catch
        {
            return "Invalid configuration";
        }
    }

    private bool IsValidPipeName(string pipedName)
    {
        // Alphanumeric strings that DO NOT start with a digit
        // Allows empty here? No, validation on submit checks IsNullOrWhiteSpace.
        if (string.IsNullOrEmpty(pipedName)) return false;
        return Regex.IsMatch(pipedName, @"^[a-zA-Z][a-zA-Z0-9]*$");
    }

    private async Task HandleValidSubmit()
    {
        try
        {
            errorMessage = string.Empty;

            // Extra validation for Pipe Name
            if (SelectedProtocol == "pipe")
            {
                if (string.IsNullOrWhiteSpace(endpointPipeName) || !IsValidPipeName(endpointPipeName))
                {
                    errorMessage = "Invalid Pipe Name. Must be alphanumeric and cannot start with a number.";
                    return;
                }
            }

            // ELF Validation
            if (config.Type == ImplantType.Elf && isCustomEndpoint)
            {
                if (config.Architecture == ImplantArchitecture.x86)
                {
                    errorMessage = "ELF implants do not support x86 architecture.";
                    return;
                }

                if (SelectedProtocol == "pipe")
                {
                    errorMessage = "ELF implants do not support Pipe endpoints.";
                    return;
                }
            }

            // Build endpoint URL
            var endpointUrl = GetEndpointUrl();
            
            var connexion = ConnexionUrl.FromString(endpointUrl);
            if (!connexion.IsValid)
            {
                errorMessage = $"Invalid endpoint configuration (generated: {endpointUrl}). Please check your inputs.";
                return;
            }

            // Set the endpoint in config
            config.Endpoint = connexion;

            // Generate implant ID
            var implantId = ShortGuid.NewGuid();
            config.ImplantName = $"Implant_{implantId}";

            // Set the listener name in config
            if (!isCustomEndpoint)
            {
                var listener = listeners.FirstOrDefault(l => l.Id == selectedListenerId);
                if (listener != null)
                {
                    config.Listener = listener.Name;
                }
            }
            else
            {
                config.Listener = null; // Custom endpoint = no listener
            }

            // Create the implant - only pass the config
            var (success,logs) = await Api.CreateImplantAsync(config);
            
            // Notify parent of success
            await OnCreationResult.InvokeAsync((success, success ? $"Implant created successfully." : "Failed to create implant.", logs));
        }
        catch (HttpRequestException ex)
        {
            // The API returns logs even on failure (passed in exception message)
            await OnCreationResult.InvokeAsync((false, "Failed to create implant.", ex.Message));
        }
        catch (Exception ex)
        {
            // Notify parent of generic failure
            await OnCreationResult.InvokeAsync((false, "An error occurred while creating implant.", ex.ToString()));
        }
    }

    private async Task OnCancel()
    {
        await OnCancelled.InvokeAsync();
    }
}
