@page "/listeners"
@using WebCommander.Models
@using WebCommander.Services
@using WebCommander.Components
@inject TeamServerClient Api
@inject AgentService AgentService
@inject ToastService ToastService
@implements IDisposable

<PageTitle>Listeners</PageTitle>

<h1>Listeners</h1>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="ShowCreateModal">
        <i class="bi bi-plus-circle"></i> Create Listener
    </button>
</div>

@if (listeners == null)
{
    <p><em>Loading...</em></p>
}
else if (listeners.Count == 0)
{
    <p><em>No Listeners available yet.</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Port</th>
                <th>Secured</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var listener in listeners)
            {
                <tr>
                    <td>@listener.Name</td>
                    <td>@listener.Ip</td>
                    <td>@listener.BindPort</td>
                    <td>
                        @if (listener.Secured)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                        }
                    </td>
                    <td>
                        <button class="btn btn-danger btn-sm" @onclick="() => StopListener(listener.Id)">
                            <i class="bi bi-stop-circle"></i> Stop
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- Create Listener Modal -->
@if (showCreateModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create New Listener</h5>
                    <button type="button" class="btn-close" @onclick="HideCreateModal"></button>
                </div>
                <div class="modal-body">
                    <ListenerCreator OnCreated="HandleListenerCreated" OnCancel="HideCreateModal" />
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Listener> listeners = new();
    private bool showCreateModal = false;

    protected override void OnInitialized()
    {
        // Subscribe to listener updates
        AgentService.OnListenersUpdated += OnListenersUpdated;
        
        // Get initial listeners
        listeners = AgentService.GetListeners();
        
        // Get initial listeners
        listeners = AgentService.GetListeners();
    }

    private void OnListenersUpdated()
    {
        listeners = AgentService.GetListeners();
        InvokeAsync(StateHasChanged);
    }

    private void ShowCreateModal()
    {
        showCreateModal = true;
    }

    private void HideCreateModal()
    {
        showCreateModal = false;
    }

    private void HandleListenerCreated()
    {
        HideCreateModal();
        ToastService.ShowSuccess("Listener created successfully", "Listener Created");
    }

    private async Task StopListener(string id)
    {
        try
        {
            var success = await AgentService.StopListenerAsync(id);
            if (success)
            {
                ToastService.ShowSuccess("Listener stopped successfully", "Listener Stopped");
            }
            else
            {
                ToastService.ShowError("Failed to stop listener", "Error");
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error stopping listener: {ex.Message}", "Error");
            Console.WriteLine($"Error stopping listener: {ex.Message}");
        }
    }

    public void Dispose()
    {
        AgentService.OnListenersUpdated -= OnListenersUpdated;
    }
}
